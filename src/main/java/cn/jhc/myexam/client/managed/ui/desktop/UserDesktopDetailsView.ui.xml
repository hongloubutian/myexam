<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
 <ui:style>
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
  <g:HTMLPanel>
    <div class="{style.underline}">
      <h3 class="{style.header}">
                <ui:msg>
                    <span ui:field="displayRenderer"/>
                </ui:msg>
            </h3>
    </div>

    <table class="{style.fields}" id="boundElementHolder">
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
    
            
            
        
            
            
            
        
            
            
            
            
        
            
            
            
            
            
        
            
            
            
            
            
            
        <tr id="id">
                <td>
                    <span class="{style.label}">Id:</span>
                </td>
                <td>
                    <span ui:field="id"/>
                </td>
            </tr>
            <tr id="username">
                <td>
                    <span class="{style.label}">Username:</span>
                </td>
                <td>
                    <span ui:field="username"/>
                </td>
            </tr>
            <tr id="password">
                <td>
                    <span class="{style.label}">Password:</span>
                </td>
                <td>
                    <span ui:field="password"/>
                </td>
            </tr>
            <tr id="enabled">
                <td>
                    <span class="{style.label}">Enabled:</span>
                </td>
                <td>
                    <span ui:field="enabled"/>
                </td>
            </tr>
            <tr id="displayName">
                <td>
                    <span class="{style.label}">Display Name:</span>
                </td>
                <td>
                    <span ui:field="displayName"/>
                </td>
            </tr>
            <tr id="roles">
                <td>
                    <span class="{style.label}">Roles:</span>
                </td>
                <td>
                    <span ui:field="roles"/>
                </td>
            </tr>
            <tr id="categories">
                <td>
                    <span class="{style.label}">Categories:</span>
                </td>
                <td>
                    <span ui:field="categories"/>
                </td>
            </tr>
            <tr id="version">
                <td>
                    <span class="{style.label}">Version:</span>
                </td>
                <td>
                    <span ui:field="version"/>
                </td>
            </tr>
        </table>

  <div class="{style.bar}">
    <g:Button addStyleNames="{style.button}" ui:field="edit">Edit</g:Button>
    <g:Anchor ui:field="delete">Delete</g:Anchor>
   </div>
  </g:HTMLPanel>
</ui:UiBinder>
